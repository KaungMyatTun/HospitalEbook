<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2f7445</item>
        <item name="colorPrimaryDark">#2f7445</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "normal_font">
        <item name = "android:textColor">#000000</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:textStyle">bold</item>
    </style>

    <style name="Text" parent="android:TextAppearance.Holo.Medium.Inverse">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_lighter</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Normal">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MiniFabLayout">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/fab_menu_item_margin_top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MiniFab">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/mini_fab_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/mini_fab_margin_left</item>
        <item name="android:layout_marginRight">@dimen/mini_fab_margin_right</item>
        <item name="android:layout_marginTop">@dimen/mini_fab_margin_top</item>
        <item name="fabSize">mini</item>
        <item name="paddingEnd">0dp</item>
        <item name="paddingStart">0dp</item>
    </style>

    <style name="TitleCardView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">4dp</item>
    </style>

    <style name="TitleView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:title">Handwriting Order</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customTabTitle" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@android:color/darker_gray</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

</resources>
