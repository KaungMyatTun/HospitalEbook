<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    android:background="@drawable/curved_shape_for_dialog">

    <RelativeLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:background="#8FBC8F">
            <ImageView
                android:id="@+id/imageView_exit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/exit_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Confirmation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView_exit"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:text="You will add handwritten progress note for  "
            android:layout_gravity="left"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_dialog_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name "
            android:textSize="12sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="str patient name "
            android:paddingLeft="21dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/patient_name"/>
        <TextView
            android:id="@+id/patient_cpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient CPI "
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/patient_name"/>
        <TextView
            android:id="@+id/txt_patient_cpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="str patient cpi"
            android:paddingLeft="37dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/txt_patient_name"
            android:layout_toRightOf="@id/patient_cpi"/>
        <TextView
            android:id="@+id/patient_visit_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Reg # "
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/patient_cpi"/>
        <TextView
            android:id="@+id/txt_patient_vistiNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="str patient visit no"
            android:paddingLeft="21dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/txt_patient_cpi"
            android:layout_toRightOf="@id/patient_visit_no"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="right">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/dialog_button_color"/>

        <Button
            android:id="@+id/add_progressNote"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="OK"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/dialog_button_color"
            android:layout_toRightOf="@id/cancel"
            android:visibility="visible"/>


    </RelativeLayout>
</RelativeLayout>