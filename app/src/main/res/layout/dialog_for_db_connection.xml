<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:background="@drawable/curved_shape_for_dialog">

    <RelativeLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:background="#8FBC8F">
            <TextView
                android:layout_width="wrap_content"
                android:text="DB Connection"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txt_ip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:text="IP Address "
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:weightSum="4"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first"
            app:passwordToggleEnabled="false"
            app:hintAnimationEnabled="false"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:hintEnabled="false"
            app:errorEnabled="false"
            android:layout_width="0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_bg"
                android:autoText="false"
                android:editable="true"
                android:imeOptions="flagNoExtractUi"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="192"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_toRightOf="@id/first"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:passwordToggleEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:errorEnabled="false"
            android:layout_toRightOf="@id/dot1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_bg"
                android:autoText="false"
                android:editable="true"
                android:imeOptions="flagNoExtractUi"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="168"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_toRightOf="@id/second"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:passwordToggleEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:errorEnabled="false"
            android:layout_toRightOf="@id/dot2">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_bg"
                android:autoText="false"
                android:editable="true"
                android:imeOptions="flagNoExtractUi"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_toRightOf="@id/third"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fourth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:passwordToggleEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:errorEnabled="false"
            android:layout_toRightOf="@id/dot3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_fourth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_bg"
                android:autoText="false"
                android:editable="true"
                android:imeOptions="flagNoExtractUi"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="      "
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="right">
        <Button
            android:id="@+id/submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/dialog_button_color"/>
    </RelativeLayout>
</RelativeLayout>